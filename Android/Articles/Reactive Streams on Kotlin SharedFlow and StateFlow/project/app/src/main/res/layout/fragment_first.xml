<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_navigation_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Second Fragment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_navigation_third"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Third Fragment"
            app:layout_constraintTop_toBottomOf="@id/btn_navigation_second"
            app:layout_constraintStart_toStartOf="@id/btn_navigation_second"
            app:layout_constraintEnd_toEndOf="@id/btn_navigation_second"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
